
@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

@{
    ViewData["title"] = "Role List";
   
}



<h3>List Role</h3>
<a class="btn btn-success mb-5" asp-controller="Role" asp-action="Create">Thêm mới</a>


<table class="table table-bordered">
    <thead>
        <tr>

            <th class="text-center" scope="col">Id</th>
            <th class="text-center" scope="col">Role Name</th>
            <th class="text-center" scope="col">Chức năng</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="text-center">
                <td>@item.Id</td>
                <td>@item.Name</td>
                
                <td>
                    <a class="btn btn-success" asp-controller="Role" asp-action="Edit" asp-route-Id="@item.Id">Sửa</a>
                    <a class="btn btn-danger"
                       asp-controller="Role"
                       asp-action="Delete"
                       asp-route-id="@item.Id"
                       onclick="return confirm('Bạn có chắc chắn muốn xóa role này?');">Xóa</a>
                </td>
            </tr>
        }


    </tbody>
</table>

