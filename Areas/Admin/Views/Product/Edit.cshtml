@{
}
@model ProductModel

@{
    ViewData["title"] = "Edit Product";
}


<div class="container">
    <h2>Cập nhật sản phẩm</h2>
    <div class="row">
        <div class="col-md-10">
            <form asp-action="Edit" asp-controller="Product" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label>Tên sản phẩm</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"> </span>
                </div>


                <div class="form-group">
                    <label>Danh mục sản phẩm</label>
                    <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories">
                        <option>--Chọn danh mục sản phẩm--</option>
                    </select>
                   
                    <span asp-validation-for="CategoryId" class="text-danger"> </span>
                </div><div class="form-group">
                    <label>Thương hiệu sản phẩm</label>
                    <select asp-for="BrandId" class="form-control" asp-items="ViewBag.Brands">
                        <option>--Chọn thương hiệu sản phẩm--</option>
                    </select>
                   
                    <span asp-validation-for="BrandId" class="text-danger" ></span>
                </div>
                <div class="form-group">
                    <label>Giá sản phẩm</label>
                    <input asp-for="Price" class="form-control"
                           step="0.01"
                           value="@Model.Price.ToString("0.00", System.Globalization.CultureInfo.InvariantCulture)" />

                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Mô tả sản phẩm</label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <br />
                    <span asp-validation-for="Description" class="text-danger" ></span>
                </div>
                <div class="form-group">
                    <label>Ảnh sản phẩm</label>
                    <input asp-for="ImageUpload" class="form-control-file" />
                    <br />
                    <span asp-validation-for="ImageUpload" class="text-danger"></span>

                    @if (!string.IsNullOrEmpty(Model.Image))
                    {
                        <img src="~/media/products/@Model.Image" width="120px" />
                    }
                    else
                    {
                        <p>Chưa có ảnh sản phẩm.</p>
                    }
                </div>
                <div class="form-group">
                    <button class="btn btn-success">Cập nhật</button>
                   
                </div>


            </form>

            <a class="btn btn-danger" asp-action="Index">Back to List</a>
        </div>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

    }

}

